<?xml version="1.0" encoding="utf-8" ?>
<resources>
 
  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Tema base aplicado sin importar qué API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--Si está utilizando la revisión 22.1, utilice solo windowNoTitle. Sin android:-->
    <item name="windowNoTitle">true</item>
    <!--Utilizaremos la barra de herramientas para que no sea necesario mostrar ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Establecer colores de tema de http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary se utiliza para el fondo predeterminado de la barra de acción -->
    <item name="colorPrimary">#2196F3</item>
    <!-- colorPrimaryDark se usa para la barra de estado -->
    <item name="colorPrimaryDark">#1976D2</item>
    <!-- colorAccent se usa como el valor predeterminado para colorControlActivated
         que se usa para teñir widgets -->
    <item name="colorAccent">#FF4081</item>
    <!--establecer colorControlNormal, colorControlActivated
         colorControlHighlight y colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:textAllCaps">false</item>
  </style>
    
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>

  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/Iris_PtoVta</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:gravity">center</item>
    <item name="android:windowFullscreen">true</item>
   
  </style>

</resources>
